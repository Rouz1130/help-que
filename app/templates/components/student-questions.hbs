{{#if checkOneBool}}
  <h3>Have you gone through all the lessons?</h3>
  <hr>
  <button {{action 'hideCheckOne'}}>Yes</button>
{{/if}}

{{#if checkTwoBool}}
  <h3>Have you asked another pair for help?</h3>
  <hr>
  <button {{action 'hideCheckTwo'}}>Yes</button>
{{/if}}

{{#if checkThreeBool}}
    <h3>Have you spent 15 minutes going through the problem documenting every step</h3>
    <hr>
    <button {{action 'hideCheckThree'}}>yes</button>
{{/if}}

{{#if helpFormBool}}
    <div class="form-group">
      <label for="name">Please enter your name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="location">Please enter your location</label>
      {{input value=location id="location"}}
    </div>

    <div class="form-group">
      <label for="description">Give a brief description of issue your are having</label>
        {{input value=description id="location"}}
    </div>
    <button {{action 'saveHelpRequest'}}>Help</button>
{{/if}}
